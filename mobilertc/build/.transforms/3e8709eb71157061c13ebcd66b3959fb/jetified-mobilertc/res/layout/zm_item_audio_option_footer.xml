<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/ZMTextView.SettingsItem"
        android:id="@+id/txtEditCountry"
        android:background="@color/zm_settings_category_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/zm_text_blue"
        android:gravity="left|center_vertical"
        android:text="@string/zm_btn_edit_country_127873" />

    <TextView
        style="@style/ZMTextView.SettingsItemDesc.Small"
        android:id="@+id/txtEditCountryDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:text="@string/zm_lbl_desc_dial_in_countries_127873" />
    <View
        android:id="@+id/viewFooterDivider"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="-20dp"
        android:background="@drawable/zm_settings_center_divider" />
    <LinearLayout
        android:id="@+id/optionIncludeTollFree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zm_settings_category_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/zm_setting_item_padding_right">


        <TextView
            style="@style/ZMTextView.SettingsItem.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/zm_btn_include_toll_free_127873" />

        <us.zoom.androidlib.widget.ZMCheckedTextView
            android:id="@+id/chkIncludeTollFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/zm_btn_toggle_default"
            android:clickable="false" />
    </LinearLayout>

</LinearLayout>