<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/zm_sip_pop_width"
              android:layout_height="wrap_content"
              android:background="@drawable/zm_pop_dropdown"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/UIKitTextView.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zm_sip_call_hold_pop_text_82852"/>

    <Button
        android:id="@+id/btnOK"
        style="@style/UIKitTextView.Small.Bold.Blue"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@color/zm_transparent"
        android:text="@string/zm_btn_ok"/>

</LinearLayout>