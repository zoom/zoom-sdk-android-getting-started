<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zoom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="600dp"
              android:orientation="vertical" >

    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout
            android:id="@+id/panelTitleBar"
            style="@style/ZMTitleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_pt_titlebar_height"
            android:gravity="center_vertical"
            zoom:zm_leftButton="@+id/btnBack"
            zoom:zm_rightButton="@+id/btnSave"
            zoom:zm_title="@+id/txtTitle" >

        <Button
                android:id="@+id/btnBack"
                style="@style/ZMButton.TitleBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zm_btn_cancel" />

        <Button
                style="@style/ZMButton.TitleBar"
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="55dp"
                android:text="@string/zm_btn_save" />

        <us.zoom.androidlib.widget.ZMDynTextSizeTextView
                android:id="@+id/txtTitle"
                style="@style/ZMTextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/zm_lbl_personal_meeting_id" />
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="@dimen/zm_setting_item_group_spacing"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" >

            <!-- Meeting ID -->

            <TextView
                    style="@style/ZMTextView.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="@dimen/zm_setting_item_padding_left"
                    android:text="@string/zm_lbl_personal_meeting_id_with_abbr" />

            <us.zoom.androidlib.widget.ZMSettingsCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                <LinearLayout
                        android:id="@+id/optionConfNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/zm_setting_item_padding_right">

                    <TextView
                            android:id="@+id/txtConfNumber"
                            style="@style/ZMTextView.SettingsItem.Small"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="111-111-1111" />

                </LinearLayout>

            </us.zoom.androidlib.widget.ZMSettingsCategory>
            <!-- Meeting password -->
            <us.zoom.androidlib.widget.ZMSettingsCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/zm_gray_1"
                >
                <TextView
                    style="@style/ZMTextView.SettingsItemDesc.Small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="left|center_vertical"
                    android:background="@color/zm_gray_1"
                    android:text="@string/zm_description_meeting_password_103819" />
            </LinearLayout>
            </us.zoom.androidlib.widget.ZMSettingsCategory>
            <us.zoom.androidlib.widget.ZMSettingsCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:id="@+id/optionMeetingPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/zm_setting_item_padding_right">

                    <TextView
                        style="@style/ZMTextView.SettingsItem.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/zm_hint_meeting_password" />

                    <us.zoom.androidlib.widget.ZMCheckedTextView
                        android:id="@+id/chkMeetingPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:checkMark="@drawable/zm_btn_toggle_default" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/edtPasswordLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/zm_setting_item_padding_right">
                    <TextView
                        style="@style/ZMTextView.SettingsItem.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="@string/zm_hint_zoom_pwd" />
                    <EditText
                        android:id="@+id/edtPassword"
                        style="@style/ZMEditText.SettingsItem"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/zm_hint_password_schedule_101334"
                        android:maxLength="10"/>
                </LinearLayout>



            </us.zoom.androidlib.widget.ZMSettingsCategory>
            <us.zoom.androidlib.widget.ZMSettingsCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zm_setting_item_group_spacing"
                    android:orientation="vertical" >

                <com.zipow.videobox.view.ZMPMIMeetingOptionLayout
                        android:id="@+id/zmPmiMeetingOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />

            </us.zoom.androidlib.widget.ZMSettingsCategory>


        </LinearLayout>

    </ScrollView>

</LinearLayout>