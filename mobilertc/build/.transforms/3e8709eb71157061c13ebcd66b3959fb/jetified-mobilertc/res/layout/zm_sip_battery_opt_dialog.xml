<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessage"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:text="@string/zm_sip_battery_optimization_dialog_content_msg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/tv1"
            android:text="@string/zm_sip_battery_optimization_dialog_btn_never"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/zm_btn_blacktext_dialog_selector"
            android:background="@drawable/zm_btn_dialog_bg"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:id="@+id/tv2"
            android:gravity="center"
            android:text="@string/zm_btn_ok"
            android:textSize="16sp"
            android:textColor="@color/zm_btn_dialog_selector"
            android:background="@drawable/zm_btn_dialog_bg"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>

</LinearLayout>