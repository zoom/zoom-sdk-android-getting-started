<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="3dp"
    android:paddingRight="8dp"
    android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zipow.videobox.view.AvatarView
            android:id="@+id/code_snippet_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            app:zm_avatarBorderSize="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.zipow.videobox.view.PListNameRoleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/zm_dimen_smallest">
                    <TextView
                        android:id="@+id/code_snippet_name"
                        style="@style/ZMTextView.ExSmall.Dimmed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="giphy"
                        android:paddingRight="@dimen/zm_dimen_smallest"/>
                    <TextView
                        android:id="@+id/txtExternalUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ZMTextView.Label.Small"
                        android:paddingLeft="@dimen/zm_dimen_smallest"
                        android:paddingRight="@dimen/zm_dimen_smallest"
                        android:gravity="center"
                        android:background="@drawable/zm_lbl_external_user_bg"
                        android:contentDescription="@string/zm_lbl_external_acc_128508"
                        android:text="@string/zm_lbl_external_128508"
                        android:visibility="gone"/>
                </com.zipow.videobox.view.PListNameRoleLayout>

                <include layout="@layout/zm_mm_starred_message_title_view" />

                <LinearLayout
                    android:id="@+id/code_snippet_title_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/code_snippet_title_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/zm_gray_3"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/code_snippet_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/zm_gray_3"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/zm_mm_bubble_file_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/zm_mm_code_snippet_bg"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/code_snippet_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/code_snippet_item_one"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/zm_mm_code_snippet_number_top_bg"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="9dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="9dp"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:id="@+id/code_snippet_item_one_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/code_snippet_item_two"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/zm_code_snippet_number"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:id="@+id/code_snippet_item_two_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/code_snippet_item_three"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/zm_code_snippet_number"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:id="@+id/code_snippet_item_three_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/code_snippet_item_four"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/zm_code_snippet_number"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:id="@+id/code_snippet_item_four_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/code_snippet_item_five"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/zm_code_snippet_number"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:id="@+id/code_snippet_item_five_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/zm_mm_code_snippet_number_bottom_bg"
                                    android:gravity="center_horizontal"
                                    android:paddingBottom="11dp"></LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingBottom="11dp">

                                    <TextView
                                        android:id="@+id/code_snippet_item_more"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="View 27 more lines"
                                        android:textColor="@color/zm_code_snippet_more_lines"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/code_snippet_holder_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="gone">

                            <ProgressBar
                                style="@style/ZMProgressBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="30dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/code_snippet_holder_failed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/zm_image_download_error" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/zm_mm_starred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/zm_mm_starred_message_icon"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/zm_message_reaction_labels_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp" />

    <TextView
        android:id="@+id/txtStarDes"
        style="@style/UIKitTextView.SecondaryText.Small.Dimmed"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp" />
</LinearLayout>