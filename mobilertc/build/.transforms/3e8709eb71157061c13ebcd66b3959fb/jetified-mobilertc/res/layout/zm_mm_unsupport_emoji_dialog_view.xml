<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:minHeight="100dp"
    android:minWidth="300dp"
    android:orientation="vertical">

    <TextView
        style="@style/ZMTextView.Large.OnLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/zm_lbl_emoji_download_emoji_23626" />

    <CheckBox
        android:id="@+id/chkNoMoreShow"
        style="@style/ZMTextView.Normal.DialogMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:button="@drawable/zm_btn_check_default"
        android:text="@string/zm_lbl_do_not_remind_me_23626" />
</LinearLayout>