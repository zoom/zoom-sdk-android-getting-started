<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zm_ui_kit_color_gray_F7F7FA"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp"
    android:gravity="center_vertical"
    android:paddingTop="3dp" >

    <ImageView
        android:id="@+id/imgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zm_mm_starred_list_head_icon"
        android:layout_marginRight="4dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtHeaderLabel"
        style="@style/UIKitTextView.SecondaryText.Small.Dimmed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:singleLine="true" />

</LinearLayout>