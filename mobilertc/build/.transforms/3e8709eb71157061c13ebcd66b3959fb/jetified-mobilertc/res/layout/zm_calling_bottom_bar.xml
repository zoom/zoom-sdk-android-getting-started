<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panelBottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="30dp"
    android:weightSum="1" >

    <Button
        android:id="@+id/btnDecline"
        style="@style/ZMButton.Red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:text="@string/zm_btn_decline"
        android:textSize="@dimen/zm_ui_kit_text_size_20sp"
        android:textColor="#ffffff" />

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/btnAccept"
        style="@style/ZMButton.Green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:text="@string/zm_sip_income_meeting_insip_108086"
        android:textSize="@dimen/zm_ui_kit_text_size_20sp"
        android:textColor="#ffffff" />

</LinearLayout>