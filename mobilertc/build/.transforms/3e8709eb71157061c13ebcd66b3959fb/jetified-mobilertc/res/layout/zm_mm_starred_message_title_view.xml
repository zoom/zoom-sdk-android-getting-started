<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/zm_starred_message_list_item_title_linear"
    android:visibility="gone"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/zm_starred_message_list_item_contact_linear"
        android:layout_width="0px"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="11sp"
            android:textColor="@color/zm_starred_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/zm_mm_starred_message_post_by_owp40"/>
        <TextView
            android:id="@+id/zm_starred_message_list_item_contact_name"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/zm_starred_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zm_starred_message_list_item_group_linear"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zm_starred_message_list_item_group_contact"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:textColor="@color/zm_starred_title_text"
            />
        <TextView
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/zm_starred_empty_text"
            android:singleLine="true"
            android:text="@string/zm_mm_starred_message_post_in_owp40"/>
        <TextView
            android:id="@+id/zm_starred_message_list_item_group_name"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/zm_starred_title_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:id="@+id/zm_starred_message_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:singleLine="true"
            android:textColor="@color/zm_starred_empty_text"
            />
    </LinearLayout>
</LinearLayout>