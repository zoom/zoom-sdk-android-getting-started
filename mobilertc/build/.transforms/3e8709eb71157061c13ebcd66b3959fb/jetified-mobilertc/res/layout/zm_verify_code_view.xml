<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnSendCode"
        style="@style/ZMButton.BlueRect"
        android:duplicateParentState="false"
        android:minWidth="@dimen/zm_btn_width_48dp"
        android:minHeight="@dimen/zm_btn_height_24dp"
        android:maxWidth="140dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:visibility="gone"
        android:text="@string/zm_btn_send_code_109213" />
    <TextView
        android:id="@+id/txtSending"
        style="@style/ZMTextView.SettingsItem.Small"
        android:textColor="@color/zm_ui_kit_color_gray_BABACC"
        android:textSize="@dimen/zm_ui_kit_text_size_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="140dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/zm_btn_send_code_109213"
        />

</FrameLayout>