<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/zm_sip_dialpad_content_margin_left"
    android:paddingRight="@dimen/zm_sip_dialpad_content_margin_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:duplicateParentState="true"
        android:orientation="horizontal"
        >

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey1"
        	android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="1"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey2"
            android:layout_width="0dp"
            android:layout_weight="1"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="2"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey3"
            android:layout_width="0dp"
            android:layout_weight="1"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="3"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:duplicateParentState="true"
        android:layout_marginTop="@dimen/zm_sip_dialpad_row_space"
        android:orientation="horizontal">

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey4"
        	android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="4"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey5"
            android:layout_width="0dp"
            android:layout_weight="1"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="5"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey6"
            android:layout_width="0dp"
            android:layout_weight="1"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="6"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zm_sip_dialpad_row_space"
        android:gravity="center"
        android:duplicateParentState="true"
        android:orientation="horizontal">

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey7"
        	android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="7"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey8"
        	android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="8"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey9"
        	android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="9"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zm_sip_dialpad_row_space"
        android:gravity="center"
        android:duplicateParentState="true"
        android:orientation="horizontal">

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKeyStar"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="*"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKey0"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            zoom:zm_dial_num="0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <com.zipow.videobox.view.sip.DialPadNumView
            android:id="@+id/btnKeyNO"
        	android:duplicateParentState="true"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            zoom:zm_dial_num="#"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>